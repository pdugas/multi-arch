ARG IMAGE
FROM ${IMAGE}

ARG TARGETPLATFORM
RUN echo "TARGETPLATFORM=${TARGETPLATFORM}"
ARG TARGETOS
RUN echo "TARGETOS=${TARGETOS}"
ARG TARGETARCH
RUN echo "TARGETARCH=${TARGETARCH}"
ARG TARGETVARIANT
RUN echo "TARGETVARIANT=${TARGETVARIANT}"

ARG LIBC
COPY bin/${TARGETARCH}-linux-${LIBC}/eg /usr/local/bin/eg
RUN chmod 0755 /usr/local/bin/eg
